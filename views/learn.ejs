<!doctype html>
<html lang="en">
    <head>
        <title>Node Flashcard App</title>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
        <link href="styles/nav.css" rel="stylesheet" type="text/css">
        <link href="styles/learn.css" rel="stylesheet" type="text/css">
    </head>
    <body>
        <% include partials/nav.ejs %>
        <div class="learnContainer">
            <h1 id="title">Choose a deck</h1>
            <br>
            <form id="chooseDeck">
                <div class="input-group">
                    <input type="number" min="1" step="1" id="learnDeckAmount" class="form-control" placeholder="Amount?" required/>
                    <select class="custom-select" id="deckOptions">
                        <% for (let i=0; i < data.decks.length; i++){ %>
                        <option><%= data.decks[i].deckName %></option>
                        <% } %>
                    </select>
                    <div class="input-group-append">
                        <button type="submit" id="learnDeckBtn" class="btn btn-outline-secondary">Start</button>
                    </div>
                </div>
            </form>
        </div>
        <script src="/ajax/learn.js" type="text/javascript"></script>
    </body>
</html>