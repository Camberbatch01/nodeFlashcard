<!doctype html>
<html lang="en">
    <head>
        <title>Node Flashcard App</title>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
        <link href="/styles/nav.css" rel="stylesheet" type="text/css">
        <link href="/styles/yourDecks.css" rel="stylesheet" type="text/css">
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.5.0/css/all.css" integrity="sha384-B4dIYHKNBt8Bc12p+WXckhzcICo0wtJAoU8YZTY5qE0Id1GSseTk6S+L3BlXeVIU" crossorigin="anonymous">
    <head>
    <body>
        <% include partials/nav.ejs %>
        <h1 id="title">Your Flashcard Decks<h1>
        <br>
        <div class="container">
            <table class="table table-sm">
                <thead>
                    <th>Share</th>
                    <th>Name</th>
                    <th>Card Amount</th>
                    <th>&nbsp;</th> 
                </thead>
                <% for (let i=0; i < data.decks.length; i++){ %>
                <tr>
                    <% if(data.decks[i].shared === true){ %>
                        <td><button type="button" class="fas fa-share-alt true"></button></td>
                      <% } else{ %>  
                        <td><button type="button" class="fas fa-share-alt"></button></td>
                     <% } %>
                    <td><div><a href=<%= "/chosenDeck/"+ data.decks[i].deckName  %>><%= data.decks[i].deckName %></a></div></td>
                    <td><%= data.decks[i].cards.length %></td>
                    <td><button type="button" class="close" aria-label="Close"><span aria-hidden="true">&times;</span></button></td>
                </tr>
                <% } %>
            </table>
            <button id="Add" type="button" class="fas fa-plus"></button>
            <br>
            <form id="newDeckFormHide">
                <div class="input-group">
                    <div>
                        <label class="labelNewDeck" for="deckName">Deck Name</label>
                    </div>
                    <div class="input-group-append">
                        <input type="text" id="deckName" class="form-control" placeholder="..." required/>
                        <button type="submit" id="createNewDeck" class="fas fa-check btn btn-outline-secondary"></button>
                    </div>
                </div>    
            </form>
        </div>    
        <script src="/ajax/yourDecks.js" type="text/javascript"></script>
    <body>
<html>