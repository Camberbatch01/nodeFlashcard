<!doctype html>
<html lang="en">
    <head>
        <title>Node Flashcard App</title>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
        <link href="/styles/nav.css" rel="stylesheet" type="text/css">
        <link href="/styles/chosenDeck.css" rel="stylesheet" type="text/css">
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.5.0/css/all.css" integrity="sha384-B4dIYHKNBt8Bc12p+WXckhzcICo0wtJAoU8YZTY5qE0Id1GSseTk6S+L3BlXeVIU" crossorigin="anonymous">
    </head>
    <body>
        <% include partials/nav.ejs %>
        <div class="container">
            <h1 id="nameOfDeck"><%= deck[0].deckName %></h1>
            <br>
            <br>  
            <table class="table table-sm">
                <thead>
                    <th>&nbsp;</th>
                    <th>Front</th>
                    <th>Back</th>
                    <th>&nbsp;</th>
                </thead>
                <% for (let i=0; i < deck[0].cards.length; i++){ %>
                <tr>
                    <td><button type="button" class="far fa-edit"></button></td>
                    <td><div><%= deck[0].cards[i].front %></div></td>
                    <td><div><%= deck[0].cards[i].back %></div></td>
                    <td><button type="button" class="close" aria-label="Close"><span aria-hidden="true">&times;</span></button></td>
                </tr>
                <% } %>
            </table>
            <br>
            <button type="button" id="Add" class="fas fa-plus"></button>
        </div>
        <br>
        <form>
           <div id="newCardContainerHide" class="form-group">
                <div class="input-group">
                    <div class="input-group-prepend">
                        <label class="input-group-text" for="frontCard">Front</label>
                    </div>
                    <input type="text" id="frontCard" class="form-control" placeholder="..." required>
                </div>
                <br>
                <div class="input-group">
                    <div class="input-group-prepend">
                        <label class="input-group-text" for="backCard">Back</label>
                    </div> 
                    <input type="text" id="backCard" class="form-control" placeholder="..." required>
                </div>
                <br>
                <button type="button" id="submitNewCard" class="fas fa-check"></button>
            </div> 
        </form>   
        <script src="/ajax/chosenDecks.js" type="text/javascript"></script>
    </body>
</html>